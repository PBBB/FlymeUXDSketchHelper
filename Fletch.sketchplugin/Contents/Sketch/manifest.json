{
  "name": "Fletch",
  "description": "",
  "author": "Flyme UXD",
  "homepage": "https://github.com/PBBB/FlymeUXDSketchHelper",
  "version": "2.0.0",
  "identifier": "com.flyme.uxd.pbb.sketch-helper",
  "icon": "../Resources/icons/icon.png",
  "appcast": "https://raw.githubusercontent.com/PBBB/FlymeUXDSketchHelper/master/appcast.xml",
  "compatibleVersion": "48",
  "bundleVersion": 1,
  "commands": [
    {
      "name": "更新目录",
      "identifier": "updateCatalog",
      "isTool":"true",
      "shortcut": "ctrl shift c",
      "script": "UpdateCatalog.cocoascript",
      "handler": "updateCatalog"
    },
    {
      "name": "更新目录（旧）",
      "identifier": "updateCatalog_OLD",
      "isTool":"true",
      "shortcut": "ctrl shift o",
      "script": "UpdateCatalog_OLD.cocoascript",
      "handler": "updateCatalog_OLD"
    },
    {
      "name": "添加更新记录...",
      "identifier": "addHistory",
      "isTool":"true",
      "shortcut": "ctrl shift h",
      "script": "AddHistory.cocoascript",
      "handler": "addHistory"
    },
    {
      "name": "显示 / 隐藏界面框...",
      "identifier": "showHideUIFramePanel",
      "isTool":"true",
      "shortcut": "ctrl shift f",
      "script": "HideUIFramePanel.cocoascript",
      "handler": "showHideUIFramePanel"
    },
    {
      "name": "显示 / 隐藏界面框 - 事件",
      "identifier": "hideUIFrameOnSelection",
      "isTool":"false",
      "script": "HideUIFrameOnSelection.cocoascript",
      "handlers": {
        "actions": {
          "SelectionChanged.finish": "hideUIFrameOnSelection"
        }
      }
    },
    {
      "name": "添加线框画板",
      "identifier": "addDocumentArtboard",
      "isTool":"true",
      "shortcut": "ctrl shift d",
      "script": "AddDocumentArtboard.cocoascript",
      "handler": "addDocumentArtboard"
      
    },
    {
      "name": "导出 PDF...",
      "identifier": "exportPDF",
      "isTool":"true",
      "shortcut": "ctrl shift e",
      "script": "ExportPDF.cocoascript",
      "handler": "exportPDF"
      
    },
    {
      "name": "显示工具栏",
      "identifier": "showToolbar",
      "isTool":"false",
      "shortcut": "ctrl shift t",
      "script": "ShowToolbar.cocoascript",
      "handler": "showToolbar"
    },
    {
      "name": "实验室测试",
      "identifier": "fletchLabsTest",
      "isTool":"true",
      "shortcut": "ctrl shift l",
      "script": "FletchLabsTest.cocoascript",
      "handler": "fletchLabsTest"
    }
  ],
  "menu": {
    "items": [
      "addDocumentArtboard",
      "showHideUIFramePanel",
      "-",
      "addHistory",
      "updateCatalog",
      "updateCatalog_OLD",
      "exportPDF",
      "-",
      {
        "title":"Fletch 实验室",
        "items": [
          "fletchLabsTest"
        ]
      },
      "-",
      "showToolbar"
    ],
    "title":"🎈 Fletch"
  }
}